{% extends 'base.html.twig' %}

{% block title %}Heating index{% endblock %}

{% block body %}
    <h1>Heating index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Type de chauffage</th>
                <th>Source d'énergie</th>
                <th>Type d'extraction</th>
                <th>Désignation</th>
                <th>Posé au sol ?</th>
            </tr>
        </thead>
        <tbody>
        {% for heating in heatings %}
            <tr>
                <td>{{ heating.heatingType.name }}</td>
                <td>{{ heating.sourceType.name }}</td>
                <td>{{ heating.extractionType.name }}</td>
                <td>{{ heating.designation }}</td>
                <td>{{ heating.onTheGround ? 'Oui' : 'Non' }}</td>
                <td>
                    <a href="{{ path('heating_show', {'id': heating.id}) }}">show</a>
                    <a href="{{ path('heating_edit', {'id': heating.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('heating_new') }}">Create new</a>
{% endblock %}
