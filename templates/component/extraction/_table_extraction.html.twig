
    <h1>Liste des Types d'extractions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
        {% for extraction in extractions %}
            <tr>
                <td>{{ extraction.name }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-center">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newExtraction">
            Ajouter
        </button>
    </div>
    <!-- The Modal -->
    <div class="modal fade" id="newExtraction">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Modal Heading</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    {{ form_start(formExtraction) }}
                    {{ form_widget(formExtraction) }}
                    <button class="btn">{{ button_label|default('Valider') }}</button>
                    {{ form_end(formExtraction) }}

                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
    </div>