<form method="post" class="text-right mb-2" action="{{ path('customer_delete', {'id': customer.id}) }}"
      onsubmit="return confirm('Etes vous certain de vouloir supprimer ce client?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ customer.id) }}">
    <button class="btn btn-outline-danger">Supprimer</button>
</form>
