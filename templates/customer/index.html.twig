{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="text-center">Liste des clients</h1>
        <div class="row">
            <div class="col text-right mr-5">
                <a class="btn btn-primary" href="{{ path('customer_new') }}">Ajouter</a>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col">

                    {{ form_start(customerSearch ,{attr: {class : 'form-inline'}}) }}
                    {{ form_widget(customerSearch.name) }}

                    <button class="btn-primary btn ml-3" type="submit">OK</button>
                    {{ form_end(customerSearch) }}

                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col">
                <table class="table table-striped thead-dark">
                    <thead >
                    <tr>
                        <th>Nom</th>
                        <th>Pr√©nom</th>
                        <th>Adresse</th>
                        <th>Tel</th>
                        <th>Tel2</th>
                        <th>Mail</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for customer in customers %}
                        <tr>
                            <td>{{ customer.name }}</td>
                            <td>{{ customer.firstname }}</td>
                            <td>{{ customer.fullAdress }}</td>
                            <td>{{ customer.phone }}</td>
                            <td>{{ customer.phone2 }}</td>
                            <td>{{ customer.mail }}</td>
                            <td>
                                <a href="{{ path('customer_show', {'id': customer.id}) }}"><img class="icone" src="/img/fiche.png"></a>
                                <a href="{{ path('customer_edit', {'id': customer.id}) }}"><img class="icone" src="/img/edit.png"></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

        </div>
    </div>
{% endblock %}
