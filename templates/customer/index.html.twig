{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    <h1 class="text-center">Liste des clients</h1>
    <div class="row">
        <div class="col">
            <a class="btn btn-primary" href="{{ path('customer_new') }}">Ajouter</a>
        </div>
    </div>
    <div class="row mt-4" >
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Pr√©nom</th>
                        <th>Adress</th>
                        <th>Phone</th>
                        <th>Phone2</th>
                        <th>Mail</th>
                        <th>Information</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for customer in customers %}
                    <tr>
                        <td>{{ customer.id }}</td>
                        <td>{{ customer.name }}</td>
                        <td>{{ customer.firstname }}</td>
                        <td>{{ customer.adress }}</td>
                        <td>{{ customer.phone }}</td>
                        <td>{{ customer.phone2 }}</td>
                        <td>{{ customer.mail }}</td>
                        <td>{{ customer.information }}</td>
                        <td>
                            <a href="{{ path('customer_show', {'id': customer.id}) }}">show</a>
                            <a href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
