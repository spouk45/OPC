{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <h1>Customer</h1>

    {{ dump(customer) }}
    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ customer.name }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ customer.firstname }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ customer.adress }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ customer.phone }}</td>
            </tr>
            <tr>
                <th>Phone2</th>
                <td>{{ customer.phone2 }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ customer.mail }}</td>
            </tr>
            <tr>
                <th>Information</th>
                <td>{{ customer.information }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('customer_index') }}">back to list</a>

    <a href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>
    <a class="btn btn-primary" href="{{ path('customer_heating_new', {'id': customer.id}) }}">Ajouter un produit</a>

    {{ include('customer/_delete_form.html.twig') }}
{% endblock %}
