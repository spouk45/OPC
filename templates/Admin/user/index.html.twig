{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="container">

        <h1>Liste des utilisateurs</h1>
    <div class="text-center mb-4 mt-4">
        <a class="btn btn-primary" href="{{ path('user_new') }}">Ajouter</a>

    </div>

        <table class="table table-striped thead-dark">
            <thead>
            <tr>
                <th>Nom complet</th>
                <th>Nom d'utilsateur</th>
                <th>Email</th>
                <th>Roles</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.fullName }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        {% for role in user.roles %}
                            {{ role }}
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ path('user_edit', {'id': user.id}) }}"><img class="icone" src="/img/edit.png"></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
