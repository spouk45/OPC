<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body>
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
<nav class="navbar navbar-expand-sm bg-dark navbar-dark" >
    <!-- Brand -->
    <a class="navbar-brand" href="/">Tableau de bord</a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <!-- Links -->
        <ul class="navbar-nav ml-auto">

            <!-- Dropdown -->
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                    Clients
                </a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="{{ path('customer_index') }}">Clients</a>
                    <a class="dropdown-item" href="{{ path('customer_new') }}">Nouveau Client</a>
                    <a class="dropdown-item" href="#">Link 3</a>
                </div>
            </li>
            <li class="nav-item dropdown">
                <div class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                    Configuration
                </div>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="{{ path('heating_index') }}">Gestion des systèmes de chauffes</a>
                </div>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto" >
            <li class="nav-item">
                <a class="btn btn-outline-secondary nav-link" href="{{ path('security_logout') }}">Déconnection</a>
            </li>
        </ul>
    </div>
</nav>
{%  endif %}
<div class="container-fluid">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="mt-4 alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    {% block body %}{% endblock %}
</div>
<script src="{{ asset('build/app.js') }}"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
